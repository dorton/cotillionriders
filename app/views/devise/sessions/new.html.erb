<div class="container">
  <div id="login" class="signin-card">
    <div class="logo-image">
      <%= image_tag("icons.svg", alt: "Logo", title: "Logo", width: "138") %>
    </div>
    <h1 class="display1">CarRiders</h1>
    <p class="subhead">
    </p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


  <% flash.each do |name, msg| %>
    <div id="flash_<%=name%>"><%= msg %></div>
  <% end %>
  <% flash.clear %>



      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :email, class: "mdl-textfield__label" %>
        <%= f.email_field :email, class: "mdl-textfield__input"  %>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :password, class: "mdl-textfield__label" %>
        <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input" %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect">
          <%= f.check_box :remember_me, class: "mdl-checkbox__input" %>
          <%= f.label :remember_me, class: "mdl-checkbox__label"  %>
        </div>
      <% end -%>
      <br>
      <br>
      <div class="actions">
        <%= f.submit "Log in", class: "mdl-button mdl-js-button mdl-button--raised" %>
      </div>
      <%= render "devise/shared/links" %>


  </div>
</div>

<% end %>
