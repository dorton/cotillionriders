<!DOCTYPE html>
<html>
<head>
  <title>CarRiders</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
  <meta name="viewport"
      content="initial-scale=1,minimum-scale=1,maximum-scale=1">
  <meta name="apple-mobile-web-app-capable"
      content="yes">
  <meta name="apple-mobile-web-app-title"
      content="CarRiders">
  <meta name="apple-mobile-web-app-status-bar-style"
      content="black">
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'apple-touch-icon-57x57.png', rel: 'apple-touch-icon', type: 'image/png' %>
  <%= favicon_link_tag 'apple-touch-icon-60x60.png', rel: 'apple-touch-icon', type: 'image/png' %>
  <%= favicon_link_tag 'apple-touch-icon-72x72.png', rel: 'apple-touch-icon', type: 'image/png' %>
  <%= favicon_link_tag 'apple-touch-icon-76x76.png', rel: 'apple-touch-icon', type: 'image/png' %>
  <%= favicon_link_tag 'apple-touch-icon-114x114.png', rel: 'apple-touch-icon', type: 'image/png' %>
  <%= favicon_link_tag 'apple-touch-icon-120x120.png', rel: 'apple-touch-icon', type: 'image/png' %>
  <%= favicon_link_tag 'apple-touch-icon-144x144.png', rel: 'apple-touch-icon', type: 'image/png' %>
  <%= favicon_link_tag 'apple-touch-icon-152x152.png', rel: 'apple-touch-icon', type: 'image/png' %>
  <%= favicon_link_tag 'apple-touch-icon-180x180.png', rel: 'apple-touch-icon', type: 'image/png' %>
  <%= favicon_link_tag 'favicon-32x32.png' %>
  <%= favicon_link_tag 'favicon-194x194.png' %>
  <%= favicon_link_tag 'favicon-96x96.png' %>
  <%= favicon_link_tag 'android-chrome-192x192.png' %>
  <%= favicon_link_tag 'favicon-16x16.png' %>


<!--   <link rel="icon" type="image/png" href="../images/favicon-32x32.png" sizes="32x32">
<link rel="icon" type="image/png" href="images/favicon-194x194.png" sizes="194x194">
<link rel="icon" type="image/png" href="images/favicon-96x96.png" sizes="96x96"> -->


  <link rel="manifest" href="/manifest.json">
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
  <meta name="msapplication-TileColor" content="#da532c">
  <meta name="msapplication-TileImage" content="/mstile-144x144.png">
  <meta name="theme-color" content="#ffffff">
</head>
<body>
  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header mdl-color--grey-100">
    <header class="mdl-layout__header">
      <div class="mdl-layout__header-row">
        <!-- Title -->
        <button class="mdl-button mdl-button--icon"><%= link_to(image_tag('icons.svg', class: 'svg-white'), root_path) %></button>
        <span><%= link_to('CarRiders', root_path, class: "mdl-layout-title mdl-navigation__link") %></span>
        <!-- Add spacer, to align navigation to the right -->
        <div class="mdl-layout-spacer"></div>
        <!-- Navigation. We hide it in small screens. -->
        <nav class="mdl-navigation mdl-layout--large-screen-only ">
          <% if user_signed_in? %>
          <% end %>

          <% if user_signed_in? %>

            <% if current_user.admin? %>
              <%= link_to('Current Pickups', current_pickups_path, class: "mdl-navigation__link") %>
            <% end %>
            <% if current_user.admin? %>
              <%= link_to('Admin', rails_admin_path, class: "mdl-navigation__link") %>
            <% end %>
            <% if current_user.admin? %>
              <%= link_to('My Account', edit_user_path(current_user), class: "mdl-navigation__link") %>
            <% end %>
          <% end %>

          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: "mdl-navigation__link" ) %>
          <% end %>
        </nav>
      </div>
    </header>
    <% if user_signed_in? %>
    <div class="mdl-layout__drawer mdl-layout--small-screen-only">
        <span class="mdl-layout-title">CarRiders</span>
        <nav class="mdl-navigation">
          <% if user_signed_in? %>
          <% end %>

          <% if user_signed_in? %>
            <% if current_user.admin? %>
              <%= link_to('All Parents', users_path, class: "mdl-navigation__link") %>
            <% end %>

            <% if current_user.admin? %>
              <%= link_to('Current Pickups', current_pickups_path, class: "mdl-navigation__link") %>
            <% end %>
            <% if current_user.admin? %>
              <%= link_to('Admin', rails_admin_path, class: "mdl-navigation__link") %>
            <% end %>
            <%= link_to('My Account', edit_user_path(current_user), class: "mdl-navigation__link") %>
          <% end %>

          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: "mdl-navigation__link" ) %>
          <% end %>
        </nav>
      </div>
<% end %>




    <main class="mdl-layout__content">
      <%= yield %>
    </main>



  </div>


</body>
</html>
